# ==============================================================================
# Core Git Configuration
# ==============================================================================
[core]
  editor = code --wait
  pager = less -FRX
  autocrlf = input
  preloadindex = true
  fscache = true

[merge]
  tool = vscode
  conflictstyle = diff3

[mergetool "vscode"]
  cmd = code --wait $MERGED

# ==============================================================================
# Color Configuration
# ==============================================================================
[color]
  ui = true

# ==============================================================================
# Essential Aliases
# ==============================================================================
[alias]
  # Basic shortcuts
  co = checkout
  ci = commit
  st = status
  br = branch

  # Commit management
  amend = commit --amend -C HEAD
  uncommit = reset --soft HEAD~1
  unstage = reset HEAD --
  discard = checkout --

  # Branch management
  cleanup = !git branch --merged | grep -v '\\*\\|master\\|main\\|develop' | xargs -n 1 git branch -d
  recent = branch --sort=-committerdate

  # Logging
  graph = log --graph --oneline --decorate --all

# ==============================================================================
# Workflow Configuration
# ==============================================================================
[push]
  default = simple

[pull]
  rebase = true

[rebase]
  autoStash = true

[branch]
  autosetupmerge = always
  autosetuprebase = always

[init]
  defaultBranch = main

[fetch]
  prune = true

[rerere]
  enabled = true

[help]
  autocorrect = 30

[diff]
  algorithm = histogram

[gc]
  auto = 256

# ==============================================================================
# Security & Signing
# ==============================================================================
[commit]
  gpgsign = true

[tag]
  gpgsign = true

[gpg]
  program = gpg

# ==============================================================================
# Pager Configuration
# ==============================================================================
[pager]
  branch = false
  tag = false
